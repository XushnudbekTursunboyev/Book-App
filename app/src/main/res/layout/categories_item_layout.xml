<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    app:cardCornerRadius="16dp"
    android:id="@+id/cardView"
    android:elevation="4dp"
    android:backgroundTint="#DDDADA"
    android:layout_margin="3dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="match_parent">

       <androidx.appcompat.widget.AppCompatImageView
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/ic_education"
           app:layout_constraintTop_toTopOf="parent"
           android:id="@+id/im_categories"
           android:layout_marginStart="8dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_categories"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/medium"
            app:layout_constraintStart_toEndOf="@id/im_categories"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/im_categories"
            app:layout_constraintBottom_toBottomOf="@id/im_categories"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>